<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maxistar.mangabrowser"
    android:versionCode="20"
    android:versionName="1.19" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.maxistar.mangabrowser.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.maxistar.mangabrowser.SearchActivity"
            android:label="@string/Search" >
        </activity>
        <activity
            android:name="com.maxistar.mangabrowser.VolumesActivity"
            android:label="@string/Volumes" >
        </activity>
        <activity
            android:name="com.maxistar.mangabrowser.VolumeActivity"
            android:label="@string/Volume" >
        </activity>
        <activity                                   
            android:name="com.maxistar.mangabrowser.FavoritesActivity"
            android:label="@string/Favorites" >
        </activity>
        <activity                                   
            android:name="com.maxistar.mangabrowser.SettingsActivity"
            android:label="@string/Settings" >
        </activity>
    </application>

</manifest>